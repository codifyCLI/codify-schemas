{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.codifycli.com/config-schema.json",
  "title": "JSON schema for Codify configuration files",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "The type of resource being specified. Ex: project, homebrew",
        "pattern": "^[a-zA-Z][\\w-]+$"
      }
    },
    "required": ["type"],
    "allOf": [
      {
        "if": {
          "properties": {
            "type": { "enum": ["project"] }
          },
          "required": ["type"]
        },
        "then": {
          "properties": {
            "type": {},
            "version": {
              "description": "CLI version constraint. An error will be throw if the CLI version is outside of the semver range",
              "type": "string",
              "pattern": "^([0-9]+)\\.([0-9]+)\\.([0-9]+)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+[0-9A-Za-z-]+)?$"
            },
            "plugins": {
              "description": "A list of third party plugins to include.",
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "string"
                }
              }
            },
            "description": {
              "description": "An optional description of the project. This value is not read.",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      {
        "if": {
          "not": {
            "properties": {
              "type": {
                "enum": ["project"]
              }
            }
          },
          "required": ["type"]
        },
        "then": {
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[\\w-]+$",
              "description": "Optional name. Useful for specifying multiple resources of the same type"
            },
            "dependsOn": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true,
              "description": "Specify resource dependencies. Must be the type or id of another resource"
            }
          },
          "additionalProperties": true
        }
      }
    ]
  }
}

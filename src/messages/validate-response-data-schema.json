{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.codify.com/validate-response-data-schema.json",
  "title": "Validate Response Schema Data",
  "type": "object",
  "properties": {
    "validationResults": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "resourceType": {
            "type": "string"
          },
          "resourceName": {
            "type": "string"
          },
          "isValid": {
            "type": "boolean"
          },
          "errors": {
            "type": "array",
            "description": "Any errors in validation"
          }
        },
        "required": ["resourceType", "isValid"]
      }
    }
  },
  "additionalProperties": false
}

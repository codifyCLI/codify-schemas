{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.codifycli.com/config-file-schema.json",
  "title": "Config file Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "All config blocks must contain the keyword type",
        "pattern": "^[a-zA-Z][\\w-]+$"
      }
    },
    "required": ["type"]
  }
}
